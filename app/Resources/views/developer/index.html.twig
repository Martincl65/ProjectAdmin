{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Developeur{% endblock %}

{% block body %}
    <div class="col-sm-12">
        <div class="col-sm-9"><h3>Developeur</h3></div>
        <div class="col-sm-3 text-right float-right"><a href="{{ path('create_developer') }}" class="btn btn-primary">Ajouter</a></div>
    </div>
    <div class="clearfix mg-top-20"><br/><hr><br/></div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>Action</th>
            <th>Nom</th>
            <th>Pr√©nom</th>
            <th>Test</th>
            <th>Identifiant</th>
        </tr>
        </thead>
        <tbody>
        {% for developer in developers %}
            <tr>
                <td>{{ developer.id }}</td>
                <td>
                    <a href="{{ path('update_developer', {'id': developer.id}) }}" class="fa fa-edit fa-fw fa-lg"></a>
                    <a href="{{ path('delete_developer', {'id': developer.id}) }}" class="fa fa-trash fa-fw fa-lg"></a>
                </td>
                <td>{{ developer.lastName }}</td>
                <td>{{ developer.firstName }}</td>
                <td>{{ developer.test.title }}</td>
                <td>{{ developer.username }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}