{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Test{% endblock %}

{% block body %}
    <div class="col-sm-12">
        <div class="col-sm-9"><h3>Test</h3></div>
        <div class="col-sm-3 text-right float-right"><a href="{{ path('create_test') }}" class="btn btn-primary">Ajouter</a></div>
    </div>
    <div class="clearfix mg-top-20"><br/><hr><br/></div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>Action</th>
            <th>Titre</th>
            <th>Niveau</th>
            <th>Nombre d'exercices</th>
        </tr>
        </thead>
        <tbody>
        {% for test in tests %}
            <tr>
                <td>{{ test.id }}</td>
                <td>
                    <a href="{{ path('update_test', {'id': test.id}) }}" class="fa fa-edit fa-fw fa-lg"></a>
                    <a href="{{ path('delete_test', {'id': test.id}) }}" class="fa fa-trash fa-fw fa-lg"></a>
                </td>
                <td>{{ test.title }}</td>
                <td>{{ test.level.label }}</td>
                <td>{{ test.exercises|length }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}