{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block title %}{{ parent() }} - Exercice{% endblock %}

{% block body %}
    <div class="col-sm-12">
        <div class="col-sm-12"><h3>Ajouter un Exercice</h3></div>
    </div>
    <div class="clearfix mg-top-20"><br/><hr><br/></div>

    {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.level) }}
        {{ form_row(form.exercises) }}
        {{ form_row(form.detail) }}
        <input type="submit" name="submit" class="btn btn-success">
    {{ form_end(form) }}
{% endblock %}