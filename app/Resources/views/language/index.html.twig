{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Test{% endblock %}

{% block body %}
    <div class="col-sm-12">
        <div class="col-sm-9"><h3>Language</h3></div>
        <div class="col-sm-3 text-right float-right"><a href="{{ path('create_language') }}" class="btn btn-primary">Ajouter</a></div>
    </div>
    <div class="clearfix mg-top-20"><br/><hr><br/></div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Action</th>
                <th>Libell√©</th>
            </tr>
        </thead>
        <tbody>
            {% for language in languages %}
                <tr>
                    <td>{{ language.id }}</td>
                    <td>
                        <a href="{{ path('update_language', {'id': language.id}) }}" class="fa fa-edit fa-fw fa-lg"></a>
                        <a href="{{ path('delete_language', {'id': language.id}) }}" class="fa fa-trash fa-fw fa-lg"></a>
                    </td>
                    <td>{{ language.label }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}